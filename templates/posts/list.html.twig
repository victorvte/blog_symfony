{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-12">
        {% for post in posts %}
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <p class="card-text">{{ post.body }}</p>
                <a href="{{ path('post_show', {'id': post.id}) }}" class="card-link">show more</a>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
